@model IPagedList<ShipperViewModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">

    <div class="col-md-12">

        <div class="box">
            <div class="box-header with-border">
                <h3 class="box-title">Shippers</h3>
            </div><!-- /.box-header -->
            @Html.ActionLink("Create", "Create")
            <div class="box-body">
                <form method="get" action="@Url.Action("Index")"
                      data-ssg-ajax="true" data-ssg-target="#ShipperContent" class="form-horizontal">

                    <div class="form-group">
                        <label class="col-sm-2 control-label">Texto:</label>
                        <div class="col-sm-8">
                            <input type="search" name="searchTerm" class="form-control" />
                        </div>
                        <div class="col-sm-2">
                            <input type="submit" value="Pesquisar" class="btn btn-block btn-primary" />
                        </div>
                    </div> 
                </form>
            </div>

            @Html.Partial("_Shipper", Model)
        </div><!-- /.box -->
    </div>
</div>

@section scripts {    
    <script src="@Url.Content("~/Scripts/Shipper.js")" type="text/javascript"></script>
}

