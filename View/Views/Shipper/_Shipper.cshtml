@model IPagedList<ShipperViewModel>
<div id="ShipperContent">
    <div class="box-body">
        <table class="table table-bordered">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().ShipperID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CompanyName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Phone)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipperID)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CompanyName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.ShipperID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.ShipperID })
                    </td>
                </tr>
            }


        </table>
    </div><!-- /.box-body -->
    <div class="box-footer clearfix" data-ssg-target="#ShipperContent">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }),
                PagedListRenderOptions.OnlyShowFivePagesAtATime)
    </div>
</div>
